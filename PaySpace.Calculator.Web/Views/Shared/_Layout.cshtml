<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaySpace Calculator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 text-gray-900 flex flex-col min-h-screen">
    <header>
        <nav class="bg-white shadow mb-3">
            <div class="container mx-auto px-4 flex justify-between items-center py-4">
                <a class="text-lg font-semibold text-gray-700" asp-area="" asp-controller="Calculator" asp-action="Index">Calculator</a>
                <div class="space-x-4">
                    <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Calculator" asp-action="History">History</a>
                    @if (Context.Session.GetString("JWToken") != null)
                    {
                        <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="text-gray-700 hover:text-gray-900">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="text-gray-700 hover:text-gray-900" asp-controller="Auth" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container mx-auto flex-grow flex items-center justify-center">
        <main role="main" class="w-full max-w-screen-xl">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t bg-white text-gray-600 py-4">
        <div class="container mx-auto px-4 text-center">
            &copy; 2024 - PaySpace Calculator
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
