@model CalculatorHistoryViewModel

<h2 class="text-2xl font-semibold mb-6 text-center">Tax History</h2>

<div class="overflow-x-auto">
    <table class="min-w-full w-full bg-white border">
        <thead class="bg-gray-100">
            <tr>
                <th scope="col" class="px-6 py-3 border-b text-left text-xs font-medium text-gray-500 uppercase">Timestamp</th>
                <th scope="col" class="px-6 py-3 border-b text-left text-xs font-medium text-gray-500 uppercase">Postal Code</th>
                <th scope="col" class="px-6 py-3 border-b text-left text-xs font-medium text-gray-500 uppercase">Income</th>
                <th scope="col" class="px-6 py-3 border-b text-left text-xs font-medium text-gray-500 uppercase">Tax</th>
                <th scope="col" class="px-6 py-3 border-b text-left text-xs font-medium text-gray-500 uppercase">Calculator</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var history in Model.CalculatorHistory)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">@history.Timestamp</td>
                    <td class="px-6 py-4 whitespace-nowrap">@history.PostalCode</td>
                    <td class="px-6 py-4 whitespace-nowrap">@history.Income</td>
                    <td class="px-6 py-4 whitespace-nowrap">@history.Tax</td>
                    <td class="px-6 py-4 whitespace-nowrap">@history.Calculator</td>
                </tr>
            }
        </tbody>
    </table>
</div>
