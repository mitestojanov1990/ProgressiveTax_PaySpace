@model CalculatorViewModel

<h2 class="text-2xl font-semibold mb-6">Calculate Tax</h2>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul class="list-disc pl-5">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Index" method="post" class="space-y-6">
    @Html.AntiForgeryToken()
    <div class="space-y-2">
        <label for="PostalCode" class="block font-medium text-gray-700">Postal Code</label>
        <select asp-for="PostalCode" class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" asp-items="Model.PostalCodes"></select>
    </div>
    <div class="space-y-2">
        <label for="Income" class="block font-medium text-gray-700">Income</label>
        <input asp-for="Income" class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
        <span asp-validation-for="Income" class="text-red-500"></span>
    </div>
    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">Calculate</button>
</form>