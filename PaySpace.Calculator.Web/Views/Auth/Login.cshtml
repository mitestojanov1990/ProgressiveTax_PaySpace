@model PaySpace.Calculator.Web.Models.LoginViewModel

<h2 class="text-2xl font-semibold mb-6">Login</h2>

<form asp-action="Login" method="post" class="space-y-6">
    <div class="space-y-2">
        <label asp-for="Email" class="block font-medium text-gray-700"></label>
        <input asp-for="Email" class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
        <span asp-validation-for="Email" class="text-red-500"></span>
    </div>
    <div class="space-y-2">
        <label asp-for="Password" class="block font-medium text-gray-700"></label>
        <input asp-for="Password" type="password" class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
        <span asp-validation-for="Password" class="text-red-500"></span>
    </div>
    <div class="space-y-2">
        <label asp-for="Password" class="block font-medium text-gray-700">Use this password: </label>
        <input asp-for="Password" type="text" readonly class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
    </div>
    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">Login</button>
</form>